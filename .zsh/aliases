# -*- shell-script -*-
# $Id$
# rm を mv に置換する --> function の方へ
# alias rm='trash'
 
# ゴミ箱一覧・削除用
alias trash-look='ls -al ~/.Trash/ 2> /dev/null'
alias trash-clean='\rm -rf ~/.Trash/* 2> /dev/null'

alias -g L='| lv'
alias -g H='| head'
alias -g T='| tail'
alias -g G='| grep'
alias -g S='| sed'
alias -g A='| awk'
alias -g W='| wc'

alias close='eject -t'

alias dpkg='COLUMNS=${COLUMNS:-80} dpkg' 

# lv
case ${UNAME} in 
    CYGWIN*)
	alias lv='lv -Os'
	;;
esac

# ls
alias ll='ls -alF'
alias la='ls -aF'
alias lj='ls -NF | nkf -e'
case ${UNAME} in 
    FreeBSD|Darwin)
	alias ls='ls -wGF'
	;;
    Linux)
	alias ls='ls -F --color=auto'
	;;
    CYGWIN*)
	alias ls='ls -F --color=auto --show-control-chars'
	;;
esac

# emacsen
case ${UNAME} in 
    Darwin)
	alias emacs='/Applications/Emacs.app/Contents/MacOS/Emacs'
	alias emacsclient='/Applications/Emacs.app/Contents/MacOS/bin/emacsclient'
	;;
    CYGWIN*)
	alias meadow='HOME=$(cygpath -w ${HOME}) Meadow --load $(cygpath -w ~/dot.files/.emacs)'
	alias emacs=meadow
	;;
    *)
	alias emacs='XMODIFIERS="@im=none" emacs'
	;;
esac

# shell
case ${UNAME} in 
    CYGWIN*)
	alias cmd='CMD'
	alias start='cmd /cstart'
	alias open='start'
	;;
esac

alias fd='SORTTYPE=1 fd'

CDRECORD_OPTIONS="dev=ATAPI:0,0 driveropts=burnfree,noforcespeed -v -useinfo -eject -pad"
alias cdrecord="cdrecord ${CDRECORD_OPTIONS} speed=4"
alias mp3burn="mp3burn -o '${CDRECORD_OPTIONS} speed=4'"
