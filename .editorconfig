root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{.gitconfig,.git.d/*}]
indent_style = tab
indent_size  = tab
tab_width    = 2

[*.md]
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
trim_trailing_whitespace = false
