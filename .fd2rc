# -*- mode: shell-script; coding: utf-8-unix -*-
# $Id$
# shell variables definition

DEFKCODE=utf8
PAGER=$PAGER
EDITOR=emacsclient
TERM=xterm
SORTTYPE=1
DISPLAYMODE=3
FD_SORTTREE=1
FD_WRITEFS=0
FD_INHERITCOPY=1
ADJTTY=1
FD_DEFCOLUMNS=2
FD_SIZEINFO=1
FD_ANSICOLOR=1
FD_EDITMODE=emacs
TMPDIR=$HOME
TMPUMASK=077

# key bind definition
bind TAB	NEXT_WINDOW
bind SPACE	MARK_FILE2

# keymap definition
keymap BS	"^?"

# launcher definition
launch .zip	"unzip -lqq"	-f " %s %m-%d-%y %t %*f"
launch .Z	"zcat %C|"
launch .gz	"gzip -cd %C|"
launch .bz2	"bzip2 -cd %C|"
launch .deb	"ar p %C data.tar.gz|gzip -dc|tar tvf - "	-f "%a %u/%g %s %y-%m-%d %t %f"
launch .rpm	"rpm2cpio %C|cpio -tv"	-f "%a %x %u %g %s %m %d %y %f"
launch jpg	display
launch png	display
launch bmp	display
launch gif	display
launch mp3	"mpg321 %C &"
launch ogg	"ogg123 %C &"
launch mpg	"xine %C &"
launch mpeg	"xine %C &"
launch wmv	"xine %C &"
launch avi	"xine %C &"
launch asf	"xine %C &"
launch mov	"xine %C &"
launch pdf	"ggv %C &"

# archiver definition
arch .zip	"zip -q %C %TA"	"unzip -q %C %TA"
arch .deb	"clear; echo ERROR; false"	"ar p %C data.tar.gz|gzip -dc|tar -xf - %TA"
arch .rpm	"clear; echo ERROR; false"	"rpm2cpio %C|cpio -id %TA"

# additional configurations by customizer

# launcher definition
launch rm	xine

# additional configurations by customizer

# launcher definition
launch sxc	oocalc

# additional configurations by customizer

# shell variables definition
FD_DISPLAYMODE=3
FD_TMPDIR=/tmp
FD_RRPATH=
FD_FNAMEKCODE=

# additional configurations by customizer

# keymap definition
keymap F1	""
keymap F2	""
keymap F3	""
keymap F4	""
keymap HOME	"\eOH"
keymap RET	""
keymap ENTER	"\eOM"
keymap END	"\eOF"
