# -*- mode: shell-script; coding: utf-8-unix -*-

#
# diff
#
if type colordiff &> /dev/null; then
  alias diff=colordiff
fi

#
# dpkg
#
alias dpkg='COLUMNS=${COLUMNS:-80} dpkg'

#
# Emacs
#
alias emacs='XMODIFIERS="@im=none" emacs'

if type emacsclient &> /dev/null; then
    alias e="emacsclient -n"
    export EDITOR="emacsclient -n"
    export GIT_EDITOR=emacsclient
else
    export EDITOR=vi
fi

#
# Git
#
type hub &> /dev/null && alias git=hub
alias g=git
alias gb='g browse'
alias gbr='g br'
alias gbrs='g brs'
alias gbrsr='g brsr'
alias gco='g co'
alias gdi='g di'
alias gg='g grep'
alias gl='g log --stat --show-signature'
alias glp='gl -p'
alias gop='g open'
alias gpl='g pull'
alias gpr='g pr'
alias gps='g push'
alias gr='cd-gitroot'
alias gref='g ref'
alias gst='g st'

#
# grep
#
alias grep='grep --color=always'

#
# ls
#
case $(uname) in
  FreeBSD|Darwin)
    alias ls='ls -wGF'
    ;;
  Linux)
    alias ls='ls -F --color=auto'
    ;;
esac

alias la='ls -AFH'
alias ll='la -l'

#
# Vim
#
type vim &> /dev/null && alias vi=vim

#
# Shorthand
#
alias b='bundle'
alias be='bundle exec'
alias d='docker'
alias dc='docker-compose'
alias l=${PAGER}
alias v=vagrant

#
# Zsh Shorthand
#
if [[ $(basename ${SHELL}) == 'zsh' ]]; then
  alias -g G='| grep'
  alias -g H='| head'
  alias -g L='| less'
  alias -g S='| sed'
  alias -g T='| tail'
  alias -g W='| wc'
fi
