[alias]
	# command
	fixup = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@)\"' -
	squash = !sh -c 'git commit -m \"squash! $(git log -1 --format='\\''%s'\\'' $@)\"' -

	# internal use only
	updated-at = log --date=iso8601 -n 1 --pretty='format:[%ai] %h'
	list-local-branches  = !sh -c 'git branch                   | colrm 1 2'
	list-remote-branches = !sh -c 'git branch -r | grep -v HEAD | colrm 1 2'

	# shortcut
	br = branch
	brs = "!f() {(for i in $(git list-local-branches);  do echo $(git updated-at $i) $i; done) | sort -r;}; f"
	brsr = "!f() {(for i in $(git list-remote-branches); do echo $(git updated-at $i) $i; done) | sort -r;}; f"
	ci = commit
	co = checkout
	di = diff
	f = fetch
	g = grep
	op = open
	pr = !sh -c 'hub browse -- pull/$(git rev-parse --abbrev-ref HEAD)'
	rb = rebase
	ref = reflog
	ri = rebase --interactive --autosquash
	st = status
	tr = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto

[commit]
	cleanup = strip
	gpgsign = true

[core]
	autocrlf = input
	quotepath = false

[diff]
	compactionHeuristic = true

[filter "lfs"]
	clean = git-lfs clean %f
	required = true
	smudge = git-lfs smudge %f

[ghq]
	root = ~/src
	root = ~/Dropbox/src
	user = elim

[github]
	user = elim

[grep]
	lineNumber = true

[help]
	autocorrect = 1

[log]
	follow = true

[pager]
	log  = ~/.git.d/bin/diff-pager
	show = ~/.git.d/bin/diff-pager
	diff = ~/.git.d/bin/diff-pager

[tig "bind"]
	generic = g move-first-line
	generic = G move-last-line

[user]
	email = takeru.naito@gmail.com
	name = Takeru Naito
	signingkey = 0A2D3E0E

