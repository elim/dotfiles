local branch_name
local url_base

branch_name=$(git rev-parse --abbrev-ref HEAD) 
url_base=$(git remote show -n origin |
              grep Fetch |
              perl -pe 's|.+git\@bitbucket.org[:/](.+)?/(.+)?.git|https://bitbucket.org/$1/$2/pull-requests/new?t=1&source=|')
open "${url_base}${branch_name}"

# Local Variables:
# mode: sh
# End:
